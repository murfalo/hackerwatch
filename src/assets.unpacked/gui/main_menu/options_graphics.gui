<gui>
	<sprites>
%include "gui/closebutton_sprites.inc"
%include "gui/scalablebutton_sprites.inc"
%include "gui/scrollbar_sprites.inc"
%include "gui/main_menu/slider_sprites.inc"
	</sprites>

	<doc>
		<group><group id="menu">
			<rect width="365" height="271" anchor="0.5 0.5" spriteset="gui/variable/bigwindow_borders.sval">
				<!-- Header -->
				<rect width="361" height="18" offset="2 2" flow="hbox">
					<!-- Headline -->
					<rect width="340" height="18" spriteset="gui/variable/headline_hor.sval">
						<text font="gui/fonts/arial11_bold.fnt" text=".mainmenu.graphicsoptions.title" anchor="0.5 0.5" />
					</rect>

					<!-- Separator -->
					<rect width="3" height="18" spriteset="gui/variable/3pxbar_vert.sval" />

					<!-- Close button -->
					<spritebutton func="back" spriteset="close" />
				</rect>

				<!-- Separator -->
				<rect width="361" height="3" offset="2 20" spriteset="gui/variable/3pxbar_hor.sval" />

				<!-- Settings container -->
				<scrollrect id="options-list" width="347" height="228" offset="2 23" color="#202a26FF" shadow="#0c120fFF" shadowsize="2" flow="vbox">
					<!-- Resolution/framerate category -->
					<group inner="true">
						<rect width="347" height="3" spriteset="gui/variable/3pxbar_hor.sval" />
						<grouprect inner="true" flow="vbox" offset="0 3" padding="4 3" spacing="2" color="#202a26FF" shadow="#0c120fFF" shadowsize="2">

							<!-- Resolution -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".v_resolution" tooltip=".v_resolution.help" />
								<scalebutton spriteset="scalebutton" padding="10 0" anchor="1 0" font="gui/fonts/arial11.fnt" func="cfg-resolution" text=".menu.change" />
							</rect>

							<!-- Fullscreen -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".v_fullscreen" tooltip=".v_fullscreen.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="v_fullscreen" func="cfg-radio v_fullscreen">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="2" text=".v_fullscreen.windowed" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="1" text=".menu.yes" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="0" text=".menu.no" />
								</checkboxgroup>
							</rect>

							<!-- Vsync -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".v_vsync" tooltip=".v_vsync.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="v_vsync" func="cfg-radio v_vsync">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="true" text=".menu.yes" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="false" text=".menu.no" />
								</checkboxgroup>
							</rect>

							<!-- Aspect ratio -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".v_forced_aspect_ratio" tooltip=".v_forced_aspect_ratio.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="v_forced_aspect_ratio" func="cfg-radio v_forced_aspect_ratio">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="1.6" text="16:10" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="1.77777" text="16:9" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="0" text=".menu.none" />
								</checkboxgroup>
							</rect>

							<!-- FPS limit -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".v_fps_limit" tooltip=".v_fps_limit.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="v_fps_limit" func="cfg-radio v_fps_limit">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="30" text="30" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="60" text="60" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="120" text="120" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="200" text="200" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="0" text=".menu.none" />
								</checkboxgroup>
							</rect>

						</grouprect>
					</group>

					<!-- Lighting category -->
					<group inner="true">
						<rect width="347" height="3" spriteset="gui/variable/3pxbar_hor.sval" />
						<grouprect inner="true" flow="vbox" offset="0 3" padding="4 3" spacing="2" color="#202a26FF" shadow="#0c120fFF" shadowsize="2">
							<!-- Pixel Perfect -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".rg_pixel_perfect" tooltip=".rg_pixel_perfect.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="rg_pixel_perfect" func="cfg-radio rg_pixel_perfect">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="true" text=".menu.yes" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="false" text=".menu.no" />
								</checkboxgroup>
							</rect>
						
							<!-- HDR -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".r_hdr" tooltip=".r_hdr.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="r_hdr" func="cfg-radio r_hdr">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="true" text=".menu.yes" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="false" text=".menu.no" />
								</checkboxgroup>
							</rect>

							<!-- Light decal projection -->
							<rect width="340" height="18">
