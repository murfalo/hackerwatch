					<!-- Color category -->
					<group inner="true">
						<rect width="347" height="3" spriteset="gui/variable/3pxbar_hor.sval" />
						<grouprect inner="true" flow="vbox" offset="0 3" padding="4 3" spacing="2" color="#202a26FF" shadow="#0c120fFF" shadowsize="2">
							<!-- Brightness -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".rg_brightness" tooltip=".rg_brightness.help" />
								<slider spriteset="slider" allow-mousewheel="false" func="rg_brightness" min="-0.75" max="0.75" width="217" height="18" anchor="1 0" />
							</rect>

							<!-- Gamma -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".rg_gamma" tooltip=".rg_gamma.help" />
								<slider spriteset="slider" allow-mousewheel="false" func="rg_gamma" min="0.1" max="5.0" width="217" height="18" anchor="1 0" />
							</rect>

							<!-- Contrast -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".rg_contrast" tooltip=".rg_contrast.help" />
								<slider spriteset="slider" allow-mousewheel="false" func="rg_contrast" min="0.1" max="3.0" width="217" height="18" anchor="1 0" />
							</rect>

							<!-- CRT Curve -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".rg_crt_curve" tooltip=".rg_crt_curve.help" />
								<slider spriteset="slider" allow-mousewheel="false" func="rg_crt_curve" min="0" max="0.5" width="217" height="18" anchor="1 0" />
