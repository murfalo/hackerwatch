									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="true" text=".menu.yes" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="false" text=".menu.no" />
								</checkboxgroup>
							</rect>

							<!-- Shadows -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".r_shadows" tooltip=".r_shadows.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="r_shadows" func="cfg-radio r_shadows">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="0" text=".menu.off" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="1" text=".r_shadows.sun" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="2" text=".menu.all" />
								</checkboxgroup>
							</rect>

							<!-- Glow -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".r_draw_glow" tooltip=".r_draw_glow.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="r_draw_glow" func="cfg-radio r_draw_glow">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="true" text=".menu.yes" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="false" text=".menu.no" />
								</checkboxgroup>
							</rect>
						</grouprect>
					</group>

					<!-- Visibles category -->
					<group inner="true">
						<rect width="347" height="3" spriteset="gui/variable/3pxbar_hor.sval" />
						<grouprect inner="true" flow="vbox" offset="0 3" padding="4 3" spacing="2" color="#202a26FF" shadow="#0c120fFF" shadowsize="2">
