%//								</checkboxgroup>
%//							</rect>

							<!-- X-ray -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".r_draw_xray" tooltip=".r_draw_xray.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="r_draw_xray" func="cfg-radio r_draw_xray">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="true" text=".menu.on" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="false" text=".menu.off" />
								</checkboxgroup>
							</rect>

							<!-- Outlines -->
							<rect width="340" height="18">
								<text offset="0 1" font="gui/fonts/arial11.fnt" color="#FFFFFFFF" text=".r_draw_outlines" tooltip=".r_draw_outlines.help" />
								<checkboxgroup flow="hbox" flow-flip="true" spacing="2" cvar="r_draw_outlines" func="cfg-radio r_draw_outlines">
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="true" text=".menu.on" />
									<scalebutton spriteset="scalebutton" padding="10 0" font="gui/fonts/arial11.fnt" value="false" text=".menu.off" />
								</checkboxgroup>
							</rect>
						</grouprect>
					</group>

