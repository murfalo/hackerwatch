<effect looping="false">
	<param name="radius" default="0" />

	<data>
		<string name="gore">effects/gibs/gib_snowball.sval</string>
		<string name="sound">event:/enemy/ice_shaman_troll/snow_bomb_explode</string>
	</data>	
	
