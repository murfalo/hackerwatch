<effect looping="true">
	<sprite origin="0 0" texture="./door_spawner_magic_pillar.png" material="system/default.mats:bright"
				
		color-r="1"
		color-g="1"
		color-b="1"
		color-a="abs(sin((t+l+rand(u+1))*pi*2.5))"		
		
	>
		<frame time="1000">0 0 16 16</frame>
	</sprite>
	<sprite origin="6 6" texture="./door_spawner_magic.png" material="system/default.mats:bright"
			
		angle="(-pi * (t+l+rand(u+3)) * 1 / 20)*2"			
				
		pos-x="8"
		pos-y="8"
				
		color-r="1"
		color-g="1"
		color-b="1"
		color-a="abs(sin((t+l+rand(u+3))*pi*2.5))"
	>
		<frame time="1000">28 32 12 12</frame>
	</sprite>
		
	
	<light pos-x="8" pos-y="8">
		<sprite texture="system/light2_L.png">
			<frame time="500">0 0 128 128</frame>
		</sprite>

		<looping value="true" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="75" />

		<color-r value="8" />
		<color-g value="0" />
		<color-b value="0" />
		<color-a value="0"/>
	</light>	
	
</effect>