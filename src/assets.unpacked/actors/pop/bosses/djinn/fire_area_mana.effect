<effect looping="true">
	<param name="radius" default="12" />
	<sprite origin="16 16" looping="true" texture="./fire_area_flames.png" material="effects/effects.mats:fire"
		
	>
        <frame time="100">0 64 32 32</frame>
        <frame time="100">32 64 32 32</frame>
        <frame time="100">0 96 32 32</frame>
        <frame time="100">32 96 32 32</frame>
	</sprite>

<variation>
	<sprite origin="8 15" looping="true" texture="./fire_area_flames.png" material="effects/effects.mats:fire"
		num-sprites="1"

		pos-x="cos(rand(u+23*i)*2*pi) * radius * pow(rand(u+673*i),0.5)"
        pos-y="sin(rand(u+49*i)*2*pi) * radius * pow(rand(u+3581*i),0.5)"
		
	>
        <frame time="100">0 0 16 16</frame>
        <frame time="100">16 0 16 16</frame>
        <frame time="100">32 0 16 16</frame>
        <frame time="100">48 0 16 16</frame>
        <frame time="100">0 16 16 16</frame>
        <frame time="100">16 16 16 16</frame>
        <frame time="100">32 16 16 16</frame>
	</sprite>
	
	
	<sprite origin="7 13" looping="true" texture="./fire_area_flames.png" material="effects/effects.mats:fire"
		num-sprites="3"

		pos-x="cos(rand(u+193*i)*2*pi) * radius * pow(rand(u+5*i),0.5)"
        pos-y="sin(rand(u+257*i)*2*pi) * radius * pow(rand(u+71*i),0.5)"
		
	>
        <frame time="100">0 32 16 16</frame>
        <frame time="100">16 32 16 16</frame>
        <frame time="100">32 32 16 16</frame>
        <frame time="100">48 32 16 16</frame>
        <frame time="100">0 48 16 16</frame>
        <frame time="100">16 48 16 16</frame>
        <frame time="100">32 48 16 16</frame>
	</sprite>
	
</variation>
<variation>
	<sprite origin="7 13" looping="true" texture="./fire_area_flames.png" material="effects/effects.mats:fire"
		num-sprites="3"

		pos-x="cos(rand(u+239*i)*2*pi) * radius * pow(rand(u+139*i),0.5)"
        pos-y="sin(rand(u+191*i)*2*pi) * radius * pow(rand(u+2377*i),0.5)"
		
	>
        <frame time="100">0 32 16 16</frame>
        <frame time="100">16 32 16 16</frame>
        <frame time="100">32 32 16 16</frame>
        <frame time="100">48 32 16 16</frame>
        <frame time="100">0 48 16 16</frame>
        <frame time="100">16 48 16 16</frame>
        <frame time="100">32 48 16 16</frame>
	</sprite>
	<sprite origin="8 15" looping="true" texture="./fire_area_flames.png" material="effects/effects.mats:fire"
		num-sprites="1"

		pos-x="cos(rand(u+1021*i)*2*pi) * radius * pow(rand(u+359*i),0.5)"
        pos-y="sin(rand(u+709*i)*2*pi) * radius * pow(rand(u+179*i),0.5)"
		
	>
        <frame time="100">0 0 16 16</frame>
        <frame time="100">16 0 16 16</frame>
        <frame time="100">32 0 16 16</frame>
        <frame time="100">48 0 16 16</frame>
        <frame time="100">0 16 16 16</frame>
        <frame time="100">16 16 16 16</frame>
        <frame time="100">32 16 16 16</frame>
	</sprite>
	
</variation>

