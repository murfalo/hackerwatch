		<int name="armor">1000</int>
		<int name="resistance">1000</int>
		<int name="experience-reward">0</int>

		<int name="aggro-range">10000</int>
		<bool name="impenetrable">false</bool>
		<bool name="no-buffs">true</bool>
		<bool name="targetable">false</bool>

		<dict name="movement">
			<string name="class">PassiveMovement</string>
			<string name="anim-idle">idle</string>
		</dict>
      
		<array name="skills">
			<dict>
				<array name="conditional">
					<string>flag</string><string>isnt</string><string>vampire_dead</string>
					<string>flag</string><string>isnt</string><string>vampire_middle</string>
