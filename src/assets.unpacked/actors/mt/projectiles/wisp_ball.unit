			<dict>
				<string name="class">PlaySound</string>
				<string name="sound">event:/enemy/elemental_ice/hit</string>
			</dict>			
		</array>
	</behavior>

	<scenes start="idle">
		<scene name="idle">
			<collision static="false">
				<circle offset="0 0" radius="3" projectile="true" />
			</collision>
			
			<effect src="./wisp_ball.effect" />
		</scene>
	</scenes>
