					<dict>
						<string name="class">Damage</string>
						<int name="magical">40</int>
					</dict>
					<dict>
						<string name="class">ApplyBuff</string>
						<string name="buff">actors/buffs.sval:freezing</string>
					</dict>
				</array>
			</dict>
			<dict>
