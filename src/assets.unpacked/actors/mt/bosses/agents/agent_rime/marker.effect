<effect looping="true" layer="-1">
	
	<param name="color_r" default="0" />
	<param name="color_g" default="1" />
	<param name="color_b" default="2" />
	<param name="size" default="1" />
	
	<sprite origin="13.5 13.5" texture=".././marker.png" material="system/default.mats:bright"
		
		scale-x="size"
		scale-y="size"
		
		angle="pi * (t+l) * 2 / 80"
		
		color-r="color_r"
		color-g="color_g"
		color-b="color_b"
		%//color-a="sin(pi*(t+l)/20)*0.25"
		color-a="0.35"
	>
		<frame time="100">0 0 27 27</frame>
	</sprite>
</effect>