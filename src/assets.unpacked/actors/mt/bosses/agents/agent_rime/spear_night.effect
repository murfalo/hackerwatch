<effect looping="true"  wpos-track="50"
>
	<param name="angle" default="0" />
	<param name="height" default="0" />
	
	<trail texture="effects/empty.png" ulayer="1" material="system/default.mats:projectile">
		
		<pos-x value="wposx(i)" />
		<pos-y value="wposy(i)-height" />
		
		<length value="1000" />
		<looping value="true" />
		
		<segments value="10" />
		<size value="8-i/2" />

		<uv-x value="0" />
		<uv-y value="0" />
		
		<color-r value="-1" />
		<color-g value="-1.2" />
		<color-b value="-1" />
		<color-a value="(9-i)/75" />
	</trail>	
	<sprite looping="true" origin="16 15" texture="./spear.png" material="system/default.mats:shadow"
	
		pos-x="0"
		pos-y="0"
	
		angle="angle">
		
		<frame time="100">0 64 32 32</frame>
		<frame time="100">32 64 32 32</frame>
		<frame time="100">64 64 32 32</frame>
		<frame time="100">96 64 32 32</frame>
		<frame time="100">0 96 32 32</frame>
	</sprite>	
	
	<sprite looping="true" origin="16 15" texture="./spear.png" material="system/default.mats:projectile"
	
		pos-x="0"
		pos-y="-height"
	
		angle="angle">
		
		<frame time="100">0 64 32 32</frame>
		<frame time="100">32 64 32 32</frame>
		<frame time="100">64 64 32 32</frame>
		<frame time="100">96 64 32 32</frame>
		<frame time="100">0 96 32 32</frame>
	</sprite>
	
</effect>