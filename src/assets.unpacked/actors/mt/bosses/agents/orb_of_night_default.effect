<effect looping="false" layer="1">
	<param name="radius" default="35"/>
	<sprite origin="16 11" looping="false" texture="./orb_of_night_default.png" material="system/default.mats:glow-both-bright"
		color-r="1"
		color-g="1"
		color-b="1"
		color-a="1-t"
		scale-x="1*pow(t,0.5)"
		scale-y="1*pow(t,0.5)"
		>
		<frame time="1000">0 128 32 32</frame>
	</sprite>
	<sprite origin="0.5 0.5" looping="false" texture="./orb_of_night_default.png" material="system/default.mats:glow-both-bright"
		num-sprites="20"
		color-r="1"
		color-g="1-t"
		color-b="1.5"
		color-a="1-t"
		pos-x="cos(rand(u+953*i)*2*pi) * (radius+10) * pow(rand(u+479*i),0.5)*t"
		pos-y="sin(rand(u+953*i)*2*pi) * (radius+10) * pow(rand(u+479*i),0.5)*t"
		>
		<frame time="1000">0 161 1 1</frame>
	</sprite>
	<light pos-x="0" pos-y="0"> 
		<sprite texture="system/light_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>
		<length value="75" />
		<looping value="true" />
		<shadow-cast-pos-jitter value="0 0 0 0" />
		<size value="min(60 * t*2, 60)" />
		<color-r value="3-3*t" />
		<color-g value="0" />
		<color-b value="3-3*t" />
		<color-a value="0/255" />
	</light>
</effect>