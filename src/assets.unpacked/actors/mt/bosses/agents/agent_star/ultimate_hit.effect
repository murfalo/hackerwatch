<effect looping="false">
	<param name="radius" default="10" />

	<data>
		<!-- <string name="gore">effects/gibs/gib_ice_cube.sval</string> -->
		<string name="sound">event:/enemy/ice_shaman_troll/snowball</string>
	</data>	
	
	<sprite origin="10 10" ulayer="0" texture="./ultimate.png" material="system/default.mats:glow-both-bright"
		angle="rand(u)*pi*2"
	>
		<frame time="50">0 40 20 20</frame>
		<frame time="50">20 40 20 20</frame>
		<frame time="50">40 40 20 20</frame>
		<frame time="50">60 40 20 20</frame>
		<frame time="50">80 40 20 20</frame>
		<frame time="50">100 40 20 20</frame>
	</sprite>

	<sprite origin="8 8" looping="true" texture="./deatharea.png" material="system/default.mats:default-noxray"
		num-sprites="10"
		pos-x="cos(rand(u+23*i)*2*pi) * radius * pow(rand(u+11*i),0.5) + 0.5*cos(rand(u+23*i)*2*pi) * radius * pow(rand(u+11*i),0.5) - cos(rand(u+23*i)*2*pi) * radius * pow(rand(u+11*i),0.5)*it"
		pos-y="sin(rand(u+23*i)*2*pi) * radius * pow(rand(u+11*i),0.5) + 0.5*sin(rand(u+23*i)*2*pi) * radius * pow(rand(u+11*i),0.5) - sin(rand(u+23*i)*2*pi) * radius * pow(rand(u+11*i),0.5)*it"
		angle="rand(u+i+3)*pi*2"
		scale-x="0.9+0.5*rand(u+i+7)"
		scale-y="0.9+0.5*rand(u+i+7)"

		color-r="1*saturate(10*t+l)"
		color-g="1*saturate(10*t+l)"
		color-b="1*saturate(10*t+l)"
		color-a="1-t"
		>
		<frame time="100">208 16 16 16</frame>
	</sprite>

	<sprite origin="8 8" looping="true" texture="./deatharea.png" material="system/default.mats:default-noxray"
		num-sprites="10"
		pos-x="cos(rand(u+23*i)*2*pi) * radius*2 * pow(rand(u+11*i),0.5)*it - cos(rand(u+23*i)*2*pi) * radius*2 * pow(rand(u+11*i),0.5)*pow(t,0.5)"
		pos-y="sin(rand(u+23*i)*2*pi) * radius*2 * pow(rand(u+11*i),0.5)*it - 15*pow(it,2)"
		angle="rand(u+i+3)*pi*2"
		scale-x="0.9+0.5*rand(u+i+7)"
		scale-y="0.9+0.5*rand(u+i+7)"

		color-r="1*saturate(10*t+l)"
		color-g="1*saturate(10*t+l)"
		color-b="1*saturate(10*t+l)"
		color-a="(1-it)*(1-t)"
		>
		<frame time="500">208 16 16 16</frame>
	</sprite>

<!-- particles -->

	<sprite origin="2 2" looping="false" texture="./ultimate.png" material="system/default.mats:glow-both-bright"
		num-sprites="2"

		pos-x="t*t*cos(rand(u+13*i)*2*pi) *radius* pow(rand(u+37*i),0.5) - cos(rand(u+13*i)*2*pi) *radius* pow(rand(u+37*i),0.5) - t*cos(rand(u+13*i)*2*pi) *radius* pow(rand(u+37*i),0.5)"
		pos-y="t*t*sin(rand(u+13*i)*2*pi) *radius* pow(rand(u+37*i),0.5) - sin(rand(u+13*i)*2*pi) *radius* pow(rand(u+37*i),0.5) - t*sin(rand(u+13*i)*2*pi) *radius* pow(rand(u+37*i),0.5) - sin(t*t*t)*rand(i)*10"
		
		color-a="(1-it)*(1-t)"
	>
		<frame time="60">112 5 4 5</frame>
		<frame time="60">112 10 4 5</frame>
		<frame time="60">112 15 4 5</frame>
		<frame time="300">112 20 4 5</frame>
		<frame time="300">123 25 3 3</frame>
	</sprite>
	
	<sprite origin="2 2" looping="false" texture="./ultimate.png" material="system/default.mats:glow-both-bright"
		num-sprites="4"
		color-r="1"
		color-g="0.5"
		color-b="1"
		color-a="(1-it)*(1-t)"
		pos-x="t*t*cos(rand(u+23*i)*2*pi) *radius* pow(rand(u+101*i),0.5) - cos(rand(u+23*i)*2*pi) *radius* pow(rand(u+101*i),0.5) - t*cos(rand(u+23*i)*2*pi) *radius* pow(rand(u+101*i),0.5)"
		pos-y="t*t*sin(rand(u+23*i)*2*pi) *radius* pow(rand(u+101*i),0.5) - sin(rand(u+23*i)*2*pi) *radius* pow(rand(u+101*i),0.5) - t*sin(rand(u+23*i)*2*pi) *radius* pow(rand(u+101*i),0.5) - sin(t*t*t)*rand(i)*10"
		
	>
		<frame time="60">116 5 4 5</frame>
		<frame time="60">116 10 4 5</frame>
		<frame time="60">116 15 4 5</frame>
		<frame time="60">116 20 4 5</frame>
		<frame time="300">116 25 4 5</frame>
		<frame time="200">123 0 3 3</frame>
	</sprite>
	<sprite origin="2 2" looping="false" texture="./ultimate.png" material="system/default.mats:glow-both-bright"
		num-sprites="4"

		color-a="(1-it)*(1-t)"
		pos-x="t*t*cos(rand(u+41*i)*2*pi) *radius* pow(rand(u+449*i),0.5) - cos(rand(u+41*i)*2*pi) *radius* pow(rand(u+449*i),0.5) - t*cos(rand(u+41*i)*2*pi) *radius* pow(rand(u+449*i),0.5)"
		pos-y="t*t*sin(rand(u+41*i)*2*pi) *radius* pow(rand(u+449*i),0.5) - sin(rand(u+41*i)*2*pi) *radius* pow(rand(u+449*i),0.5) - t*sin(rand(u+41*i)*2*pi) *radius* pow(rand(u+449*i),0.5) - sin(t*t*t)*rand(i)*10"
		
	>
		<frame time="60">119 5 4 5</frame>
		<frame time="60">119 15 4 5</frame>
		<frame time="60">119 20 4 5</frame>
		<frame time="60">119 25 4 5</frame>
		<frame time="200">119 30 4 5</frame>
		<frame time="200">123 0 3 3</frame>
	</sprite>

	%// Flash
	
	<light pos-x="0" pos-y="0">
		<sprite texture="system/light_L.png">
			<frame time="200">0 0 128 128</frame>
		</sprite>

		<looping value="false" />
		<length value="200" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="80 * (1-t)" />

		<color-r value="0.8" />
		<color-g value="0.5" />
		<color-b value="5" />
		<color-a value="0"/>
	</light>

	%// fade
	<light pos-x="0" pos-y="0">
		<sprite texture="system/light_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>

		<looping value="true" />
		<length value="300" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="48 * (1-pow(t,2))" />

		<color-r value="0.8 * (1-pow(t,2))" />
		<color-g value="0.5 * (1-pow(t,2))" />
		<color-b value="5 * (1-pow(t,2))" />
		<color-a value="0"/>
	</light>


	<light pos-y="0" pos-x="0"> 
		<sprite texture="./star.png">
			<frame time="100">0 0 256 256</frame>
		</sprite>
		<length value="200" />
		<looping value="true" />
		<cast-shadows value="false" />
		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />
		<shadow-cast-pos-jitter value="0 0 0 0" />
		<angle value="0"/>
		<size value="64 + 128*t" />
		<color-r value="2 * (1-t)" />
		<color-g value="2 * (1-t)" />
		<color-b value="2 * (1-t)" />
	</light>	

	
</effect>