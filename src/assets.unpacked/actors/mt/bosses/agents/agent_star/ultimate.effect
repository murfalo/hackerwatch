<effect looping="true" layer="120">
	<param name="radius" default="5" />
	<param name="height" default="-300" />
	<param name="animLength" default="1000" />


	<param name="ttl" default="1350" />
	
	
<!-- Base ring -->
	<sprite origin="10 10" looping="true" texture="./ultimate.png" material="system/default.mats:default-noxray"

		pos-y="height * saturate(1-(t+l)/(ttl/animLength))"
		scale-x="0.99 + sin(t*pi*2)*0.01"
		scale-y="0.99 + cos(t*pi*2)*0.01"
		>
		<frame time="500">0 0 20 20</frame>
	</sprite>
<!-- Black Center -->
	<sprite origin="10 10" looping="true" texture="./ultimate.png" material="system/default.mats:default-noxray"
		color-r="-0.5"
		color-g="-0.5"
		color-b="-0.5"
		scale-x="0.9 + sin(t*pi*2)*0.2"
		scale-y="0.9 + cos(t*pi*2)*0.2"
		pos-y="height * saturate(1-(t+l)/(ttl/animLength))"
		>
		<frame time="250">20 0 20 20</frame>
	</sprite>
<!-- Shuriken -->
	<sprite origin="10 10" looping="true" texture="./ultimate.png" material="system/default.mats:glow-both-bright"

		pos-y="height * saturate(1-(t+l)/(ttl/animLength))"
		angle="rand(u+i+23)+t*pi*2"
		>
		<frame time="500">40 0 20 20</frame>
	</sprite>
<!-- glowing ring -->
	<sprite origin="10 10" looping="true" texture="./ultimate.png" material="system/default.mats:glow-both-bright"

		pos-y="height * saturate(1-(t+l)/(ttl/animLength))"
		color-a="0.2 + sin((t+l)/3*pi*2)*0.25"
		>
		<frame time="500">0 20 20 20</frame>
	</sprite>
<!-- white/black blur -->
	<sprite origin="10 10" looping="true" texture="./ultimate.png" material="system/default.mats:glow-both-bright"

		pos-y="height * saturate(1-(t+l)/(ttl/animLength))"
		color-r="sin((t+l)/2*pi*2)*0.5"
		color-g="sin((t+l)/2*pi*2)*0.5"
		color-b="sin((t+l)/2*pi*2)*0.5"
		scale-x="0.99 + sin(t*pi*2)*0.01"
		scale-y="0.99 + cos(t*pi*2)*0.01"
		angle="rand(u+i+23)-t*pi*2"
		>
		<frame time="500">21 20 20 20</frame>
	</sprite>
<!-- Particles -->

	<sprite origin="8 8" looping="true" texture="./deatharea.png" material="system/default.mats:default-noxray"
		num-sprites="30"
		pos-x="cos(rand(u+i+101)*pi*2)*radius - cos(rand(u+i+101)*pi*2)*radius*(it)"
		pos-y="height * saturate(1-(t+l)/(ttl/animLength)) + sin(rand(u+i+101)*pi*2)*radius - 45*(it)"
		angle="rand(u+i+3)*pi*2"
		scale-x="0.9+0.5*rand(u+i+7)"
		scale-y="0.9+0.5*rand(u+i+7)"
		color-r="1*saturate(10*t+l)"
		color-g="1*saturate(10*t+l)"
		color-b="1*saturate(10*t+l)"
		color-a="1*saturate(sin(it*pi*2))"
		>
		<frame time="100">208 16 16 16</frame>
	</sprite>
<!-- Lights -->
	<light pos-x="0" pos-y="height * saturate(1-(t+l)/(ttl/animLength))">
		<sprite texture="system/light_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>

		<looping value="true" />
		<length value="100" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="48 * saturate(4*t+l) + 1*cos(t*pi*4)" />

		<color-r value="0.1" />
		<color-g value="0.5" />
		<color-b value="5" />
		<color-a value="0"/>
	</light>

	<light pos-x="0" pos-y="height * saturate(1-(t+l)/(ttl/animLength))-10">
		<sprite texture="system/light_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>

		<looping value="true" />
		<length value="100" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="40 * saturate(4*t+l) + 1*cos(t*pi*4)" />

		<color-r value="0.8" />
		<color-g value="0.5" />
		<color-b value="5" />
		<color-a value="0"/>
	</light>
	<light pos-y="height * saturate(1-(t+l)/(ttl/animLength))" pos-x="0"> 
		<sprite texture="./star.png">
			<frame time="100">0 0 256 256</frame>
		</sprite>
		<length value="1000" />
		<looping value="true" />
		<cast-shadows value="false" />
		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />
		<shadow-cast-pos-jitter value="0 0 0 0" />
		<angle value="0"/>
		<size value="64" />
		<color-r value="2" />
		<color-g value="2" />
		<color-b value="2" />
	</light>	

</effect>