<effect looping="false">
	<param name="radius" default="28" />

	<data>
		<string name="gore">effects/gibs/gib_agent_decay_ultimate.sval</string>
		<string name="sound">event:/enemy/ice_shaman_troll/snowball</string>
	</data>	
	
	<sprite origin="10 10" ulayer="0" texture="./ultimate.png" material="system/default.mats:glow-both-bright"
		angle="rand(u)*pi*2"
	>
		<frame time="50">0 96 20 20</frame>
		<frame time="50">20 96 20 20</frame>
		<frame time="50">40 96 20 20</frame>
		<frame time="50">60 96 20 20</frame>
		<frame time="50">80 96 20 20</frame>
		<frame time="50">100 96 20 20</frame>
	</sprite>
	
	<sprite origin="2.5 2" looping="false" texture="./rottenpart_impact.png" material="system/default.mats:bright-noxray"
		num-sprites="rand(u+i*101)*30"
		angle="floor(sin(t*pi*2))*pi"
		pos-x="rand(u+i*23)*10 - 5 + t*(rand(u+i*23)*20 - 10)"
		pos-y="(t*rand(u+i*11)*-60 + pow(t,4)*rand(u+i*11)*30)"
		>
		<frame time="50">0 96 5 4</frame>
		<frame time="50">5 96 5 4</frame>
		<frame time="50">10 96 5 4</frame>
		<frame time="50">15 96 5 4</frame>
		<frame time="50">20 96 5 4</frame>
		<frame time="50">25 96 5 4</frame>
		<frame time="50">30 96 5 4</frame>
		<frame time="50">35 96 5 4</frame>
	</sprite>
	<sprite origin="2.5 2" looping="false" texture="./rottenpart_impact.png" material="system/default.mats:glow-both-bright"
		num-sprites="rand(u+i*101)*30"
		angle="floor(sin(t*pi*2))*pi"
		pos-x="rand(u+i*23)*10 - 5 + t*(rand(u+i*23)*20 - 10)"
		pos-y="(t*rand(u+i*11)*-60 + pow(t,4)*rand(u+i*11)*30)"
		color-a="0.5"
		>
		<frame time="50">0 96 5 4</frame>
		<frame time="50">5 96 5 4</frame>
		<frame time="50">10 96 5 4</frame>
		<frame time="50">15 96 5 4</frame>
		<frame time="50">20 96 5 4</frame>
		<frame time="50">25 96 5 4</frame>
		<frame time="50">30 96 5 4</frame>
		<frame time="50">35 96 5 4</frame>
	</sprite>
	%// Flash
	
	<light pos-x="0" pos-y="0">
		<sprite texture="system/light_L.png">
			<frame time="200">0 0 128 128</frame>
		</sprite>

		<looping value="false" />
		<length value="200" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="80 * (1-t)" />

		<color-r value="0" />
		<color-g value="4/4" />
		<color-b value="1/4" />
		<color-a value="0"/>
	</light>

	%// fade
	<light pos-x="0" pos-y="0">
		<sprite texture="system/light_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>

		<looping value="true" />
		<length value="100" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="48 * (1-pow(t,2))" />
		
		<color-r value="0" />
		<color-g value="2 * (1-pow(t,2))/4" />
		<color-b value="0.5 * (1-pow(t,2))/4" />		
		<color-a value="0"/>
	</light>
	
</effect>