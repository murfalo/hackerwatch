<unit netsync="none">
	<behavior class="RayProjectile">
		<string name="anim">idle</string>
		<float name="speed">3</float>
		<int name="ttl">10000</int>
		<bool name="seeking">true</bool>
		<float name="seek-turnspeed">0.1</float>
		<array name="effects">
			<dict>
				<string name="class">Explode</string>
				<bool name="miss-fx">true</bool>
				<string name="fx">players/wizard/fireball_5_hit.effect</string>
				<int name="radius">18</int>
				<float name="team-dmg">0</float>
				<array name="effects">
					<dict>
						<string name="class">Damage</string>
						<int name="magical">40</int>
						<float name="resistance-mul">0.75</float>
					</dict>
					<dict>
						<string name="class">ApplyBuff</string>
						<string name="buff">actors/buffs.sval:burning_strong</string>
					</dict>
				</array>
			</dict>
			<dict>
				<string name="class">PlaySound</string>
				<string name="sound">event:/enemy/boss_agents/fireball-impact</string>
			</dict>
			<dict>
				<string name="class">SpawnEffect</string>
				<string name="effect">players/wizard/trail_fireball_fade.effect</string>
				<bool name="clone-owner-params">true</bool>
			</dict>
		</array>
		<array name="miss-effects">
			<dict>
				<string name="class">Explode</string>
				<bool name="miss-fx">true</bool>
				<string name="fx">players/wizard/fireball_5_hit.effect</string>
				<int name="radius">18</int>
				<float name="team-dmg">0</float>
				<array name="effects">
					<dict>
						<string name="class">Damage</string>
						<int name="magical">50</int>
						<float name="resistance-mul">0.75</float>
					</dict>
					<dict>
						<string name="class">ApplyBuff</string>
						<string name="buff">actors/buffs.sval:burning_strong</string>
					</dict>
				</array>
			</dict>
			<dict>
				<string name="class">PlaySound</string>
				<string name="sound">event:/enemy/boss_agents/fireball-impact</string>
			</dict>
			<dict>
				<string name="class">SpawnEffect</string>
				<string name="effect">players/wizard/trail_fireball_fade.effect</string>
				<bool name="clone-owner-params">true</bool>
			</dict>
		</array>		
		<dict name="effect-params">
			<float name="height">4</float>
			<float name="range">80</float>
		</dict>
	</behavior>
	<scenes>
		<scene name="idle">
			<effect src="./fireball.effect" />
			<collision static="false">
				<circle projectile="true" radius="4" />
			</collision>
			<light pos="0 0">
				<sprite texture="system/light2_L.png">
					<frame>0 0 128 128</frame>
				</sprite>
				<length value="50" />
				<looping value="true" />
				<cast-shadows value="true" />
				<overbright value="3" />
				<shadow-cast-pos value="0 0" />
				<shadow-cast-pos-jitter value="0 0 0 0" />
				<sizes>
					<size value="48" />
				</sizes>
				<colors>
					<color value="300 75 0 0" />
				</colors>
			</light>				
		</scene>
	</scenes>
</unit>


