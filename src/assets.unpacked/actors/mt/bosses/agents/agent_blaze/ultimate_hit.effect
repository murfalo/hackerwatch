<effect looping="false">
	<param name="radius" default="28" />

	<data>
		<string name="gore">effects/gibs/gib_meteor_blaze.sval</string>
		<string name="sound">event:/item/item_meteor</string>
	</data>	
	

	<sprite origin="10 10" ulayer="0" texture="./ultimate.png" material="system/default.mats:glow-both-bright"
		angle="rand(u)*pi*2"
	>
		<frame time="50">0 96 20 20</frame>
		<frame time="50">20 96 20 20</frame>
		<frame time="50">40 96 20 20</frame>
		<frame time="50">60 96 20 20</frame>
		<frame time="50">80 96 20 20</frame>
		<frame time="50">100 96 20 20</frame>
	</sprite>

	%// Flash
	
	<light pos-x="0" pos-y="0">
		<sprite texture="system/light_L.png">
			<frame time="200">0 0 128 128</frame>
		</sprite>

		<looping value="false" />
		<length value="200" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="80 * (1-t)" />

		<color-r value="4/4" />
		<color-g value="1/4" />
		<color-b value="1/4" />
		<color-a value="0"/>
	</light>

	%// fade
	<light pos-x="0" pos-y="0">
		<sprite texture="system/light_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>

		<looping value="true" />
		<length value="100" />

		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="48 * (1-pow(t,2))" />

		<color-r value="2 * (1-pow(t,2))/4" />
		<color-g value="0.5 * (1-pow(t,2))/4" />
		<color-b value="0" />
		<color-a value="0"/>
	</light>
	
</effect>