		pos-y="0"
	
		angle="angle">
		
		<frame time="100">480 0 32 16</frame>
		<frame time="100">480 16 32 16</frame>
		<frame time="100">480 32 32 16</frame>
		<frame time="100">480 48 32 16</frame>
		<frame time="100">480 64 32 16</frame>
		<frame time="100">480 80 32 16</frame>
	</sprite>	
	<light>
		<sprite texture="system/light_L.png">
			<frame>0 0 128 128</frame>
		</sprite>
		
		<length value="225"/>
		
		<looping value="true" />
		
		<cast-shadows value="false" />

		
		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />
		
		<shadow-cast-pos-jitter value="0 0 0 0" />
		
		<size value="60" />
			
		<color-r value="1" />
		<color-g value="0" />
		<color-b value="1" />
		<color-a value="0"/>
		
