		pos-y="-height"
	
		angle="angle">
		
		<frame time="100">501 0 11 16</frame>
		<frame time="100">501 16 11 16</frame>
		<frame time="100">501 32 11 16</frame>
		<frame time="100">501 48 11 16</frame>
		<frame time="100">501 64 11 16</frame>
