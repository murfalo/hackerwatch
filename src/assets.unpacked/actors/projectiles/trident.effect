		pos-x="0"
		pos-y="-height"
	
		angle="angle">
		
		<frame time="100">480 0 32 16</frame>
		<frame time="100">480 16 32 16</frame>
		<frame time="100">480 32 32 16</frame>
		<frame time="100">480 48 32 16</frame>
		<frame time="100">480 64 32 16</frame>
		<frame time="100">480 80 32 16</frame>
