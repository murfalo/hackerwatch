	pos-y="20 * -t"
	
	color-a="max(0.75-t*t,0)"
	>
		<frame time="500">128 0 64 64</frame>
	</sprite>
		
	<sprite origin="18 18" looping="false" texture="./lich_1_mb_glyph.png" material="system/default.mats:glow"
	
	pos-y="20 * -t"
	
	color-a="max(0.75-t*t,0)"
	
	>
		<frame time="500">0 128 36 35</frame>
	</sprite>
	
	
	<light> 
		<sprite texture="system/light_square_L_axial.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>
		
		<length value="500" />
		
		<looping value="false" />
		
		<cast-shadows value="false" />
		
		<shadow-cast-pos-x value="0" />
