		<uv-r-x value="45 * (7 - i) / 7" />
		<uv-r-y value="22 + mod(l,5) * 22" />
	
		
		<color-r value="1" />
		<color-g value="1" />
		<color-b value="1" />
		<color-a value="1" />
	</trail>
