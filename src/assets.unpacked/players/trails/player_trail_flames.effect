<effect looping="true" wpos-track="15">

	
	<trail texture="players/witch_hunter/hound_trail.png" material="system/default.mats:bright-noxray">
		<pos-x value="wposx(i)-3" />
		<pos-y value="wposyz(i)-2" />
		
		<length value="40" />
		<looping value="true" />
		
		<segments value="7" />
