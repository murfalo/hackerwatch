<effect looping="true" wpos-track="15">
	<param name="angle" default="2" />
	<param name="height" default="0" />
	<param name="cR" default="1" />
	<param name="cG" default="0" />
	<param name="cB" default="0.8" />
	
	
	<sprite looping="true" origin="6 6.5" texture="./combo_nova.png" material="system/default.mats:projectile-player"
	
		pos-x="0"
		pos-y="-height"
		color-r="cR - sin(t*pi*2)*0.5"
		color-g="cG - sin(t*pi*2)*0.5"
		color-b="cB - sin(t*pi*2)*0.5"
	
		angle="angle">
		
		<frame time="500">2 81 12 13</frame>
	</sprite>
	
		
	<trail texture="./combo_nova_trail.png" material="effects/effects.mats:lit">
		<pos-x value="wposx(i)" />
		<pos-y value="wposy(i)-height" />
		
		<length value="150" />
		<looping value="true" />
		
		<segments value="15" />
		<size value="12 * (1 - i / 12)" />
		
		<uv-l-x value="(t+i)*8" />
		<uv-l-y value="0" />
		
		<uv-r-x value="(t+i)*8" />
		<uv-r-y value="12" />
		
		<color-r value="cR" />
		<color-g value="cG" />
		<color-b value="cB" />
		<color-a value="1 * (1 - i / 12)" />
	</trail>
	
	
	<trail texture="./combo_nova_trail.png" material="effects/effects.mats:lit">
		<pos-x value="wposx(i)" />
		<pos-y value="wposy(i)-height" />
		
		<length value="150" />
		<looping value="true" />
		
		<segments value="15" />
		<size value="12 * (1 - i / 12)" />
		
		<uv-l-x value="(t+i)*8" />
		<uv-l-y value="13" />
		
		<uv-r-x value="(t+i)*8" />
		<uv-r-y value="19" />
		
		<color-r value="cR" />
		<color-g value="cG" />
		<color-b value="cB" />
		<color-a value="1 * (1 - i / 12)" />
	</trail>
	
	
	<!-- <sprite looping="true" origin="3.5 6" texture="./combo_nova_trail.png" material="system/default.mats:projectile-player"
		num-sprites="1"
		pos-x="sin(t*pi*1) * (cos(angle)*10))"
		pos-y="sin(t*pi*1) * (sin(angle)*10))-height"
		scale-x="1.2-t"
		scale-y="1.2-t"
		
		color-r="cR - sin(t*pi*2)*0.5"
		color-g="cG - sin(t*pi*2)*0.5"
		color-b="cB - sin(t*pi*2)*0.5"
		color-a="saturate(0.5 * ceil(i+1*t))*(1-t)"
		
		angle="angle" >
		
		<frame time="500">0 0 7 12</frame>
	</sprite> -->
	
	
	
	
	<light pos-x="0" pos-y="-height">
		<sprite texture="system/light_L.png">
			<frame time="500">0 0 128 128</frame>
		</sprite>

		<looping value="true" />
		
		<length value="200" />
		<cast-shadows value="false" />

		<shadow-cast-pos-x value="0" />
		<shadow-cast-pos-y value="0" />

		<shadow-cast-pos-jitter value="0 0 0 0" />

		<size value="12" />

		<color-r value="cR" />
		<color-g value="cG" />
		<color-b value="cB" />
		<color-a value="0"/>
	</light>
</effect>