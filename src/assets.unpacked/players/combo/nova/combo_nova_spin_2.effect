<effect looping="true">
	<param name="angle" default="2" />
	<param name="height" default="0" />
	<param name="cR" default="1" />
	<param name="cG" default="0" />
	<param name="cB" default="0.8" />
	
	
	<sprite looping="true" origin="9 2.5" texture="./combo_nova.png" material="system/default.mats:projectile-player"
	
		pos-x="0"
		pos-y="-height"
		color-r="cR - sin(t*pi*2)*0.5"
		color-g="cG - sin(t*pi*2)*0.5"
		color-b="cB - sin(t*pi*2)*0.5"
	
		angle="angle">
		
		<frame time="500">0 6 11 5</frame>
	</sprite>
	
	<sprite looping="true" origin="4.5 4.5" texture="./combo_nova.png" material="system/default.mats:projectile-player"
		num-sprites="3"
		pos-x="t*(cos(angle)*-15)*rand(i+l*101)*3"
		pos-y="t*(sin(angle)*-15)*rand(i+l*101)*3-height"
		scale-x="1-t"
		scale-y="1-t"
		
		color-r="cR - sin(t*pi*2)*0.5"
		color-g="cG - sin(t*pi*2)*0.5"
		color-b="cB - sin(t*pi*2)*0.5"
		color-a="saturate(0.5 * floor(i+1*t))*(1-t)"
		
		angle="pi*2*t*1-i" >
		
		<frame time="500">49 1 9 9</frame>
	</sprite>
	
	<sprite looping="true" origin="6 6" texture="./combo_nova.png" material="system/default.mats:projectile-player"
		num-sprites="3"
		pos-x="t*(cos(angle)*-15)*i"
		pos-y="t*(sin(angle)*-15)*i-height"
		scale-x="1-t"
		scale-y="1-t"
		
		color-r="cR - sin(t*pi*2)*0.5"
		color-g="cG - sin(t*pi*2)*0.5"
		color-b="cB - sin(t*pi*2)*0.5"
		color-a="saturate(0.5 * floor(i+1*t))*(1-t)"
		
		angle="pi*2*t*1-i" >
		
		<frame time="500">48 16 12 12</frame>
	</sprite>
