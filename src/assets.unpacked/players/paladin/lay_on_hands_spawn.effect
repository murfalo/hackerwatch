	<sprite origin="32 32" pos-y="5" looping="false" texture="effects/players/player_effects.png" material="system/default.mats:glow"
		
		angle="0"
		
		scale-x="t"
		scale-y="t"
		
		color-r="1"
		color-g="1"
		color-b="1"
		color-a="1"
	>
		<frame time="200">0 128 64 64</frame>
	</sprite>		
	
	
