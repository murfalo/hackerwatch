<effect looping="true">
	<param name="angle" default="0" />
	<param name="height" default="0" />
	<sprite looping="true" origin="3 1.5" texture="./archer_arrow.png" material="system/default.mats:projectile-player"
	
		pos-x="0"
		pos-y="-height"
	
		angle="angle">
		
		<frame time="50">0 0 9 3</frame>
		<frame time="50">0 3 9 3</frame>
		<frame time="50">0 6 9 3</frame>
	</sprite>
