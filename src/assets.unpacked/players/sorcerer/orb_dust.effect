	</sprite>
	
	<sprite origin="8 8" looping="true" texture="./orb_break.png" material="system/default.mats:default-noxray"
	
		num-sprites="10"
		
		scale-x="it"
		scale-y="it"
		pos-x="cos((rand(i*17+27*il) * 0.2 + 1.65) * pi) * 20 * it"
		pos-y="(sin((rand(i*17+27*il) * 0.2 + 1.65) * pi) * 20 * it) + 10"
		color-a="1-it"
	
	>
		
		<frame time="200">192 64 16 16</frame>
		
	</sprite>
	
	
	<light pos-x="0" pos-y="0"> 
		<sprite texture="system/light_concentrated_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>
		
		<length value="100" />
