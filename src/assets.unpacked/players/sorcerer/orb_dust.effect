		num-sprites="10"
		
		scale-x="it"
		scale-y="it"
		pos-x="cos((rand(i*13+27*il) * 0.2 + 1.15) * pi) * 20 * it"
		pos-y="(sin((rand(i*13+27*il) * 0.2 + 1.15) * pi) * 20 * it) + 10"
		color-a="1-it"
	
	>
		
		<frame time="200">192 64 16 16</frame>
		
	</sprite>
	<sprite origin="8 8" looping="true" texture="./orb_break.png" material="system/default.mats:default-noxray"
	
		num-sprites="10"
		
		scale-x="it"
		scale-y="it"
		pos-x="cos((rand(i*17+27*il) * 0.2 + 1.15) * pi) * 20 * it"
		pos-y="(sin((rand(i*17+27*il) * 0.2 + 1.15) * pi) * 20 * it) + 15"
		color-a="1-it"
	
	>
		
		<frame time="200">208 64 16 16</frame>
		
	</sprite>
	<!-- right -->
	<sprite origin="8 8" looping="true" texture="./orb_break.png" material="system/default.mats:default-noxray"
	
		num-sprites="10"
		
