				scale-x="length/28"
			>
				<frame time="50">0 80 32 16</frame>
				<frame time="25">0 0 0 0</frame>
				<frame time="25">32 80 32 16</frame>
				<frame time="25">64 80 32 16</frame>
			</sprite>
		</variation>
