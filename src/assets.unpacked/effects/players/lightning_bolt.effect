	%// Flash
	<light pos-x="dx" pos-y="dy"> 
		<sprite texture="system/light_concentrated_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>
		
		<length value="100" />
		<looping value="false" />

		<size value="50 * t" />
		
		<color-r value="0" />
		<color-g value="0" />
		<color-b value="0.5" />
		<color-a value="0" />
	</light>

	%// Fade
	<light pos-x="dx" pos-y="dy"> 
		<sprite texture="system/light_L.png">
			<frame time="100">0 0 128 128</frame>
		</sprite>
		
		<length value="250" />
		<looping value="false" />

		<size value="max(0,t * 50) + 10" />
		
		<color-r value="0" />
		<color-g value="0" />
		<color-b value="0.5 - t*0.5" />
		<color-a value="0" />
	</light>
</effect>