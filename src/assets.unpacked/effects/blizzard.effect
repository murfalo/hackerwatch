		num-sprites="5"

		pos-x="cos(rand(u+23*i)*2*pi) * radius * pow(rand(u+43*i),0.5) + sin(t*pi*2)*radius*rand(i)"
		pos-y="sin(rand(u+23*i)*2*pi) * radius * pow(rand(u+43*i),0.5) + cos(t*pi*2)*radius*rand(i)"
		color-a="saturate(sin(t*t*pi*2))*rand(i)*0.8+0.2"
		scale-x="0.9"
		scale-y="0.9"
		angle="rand(i+u)*t*pi*2"
	>
        
		<frame time="800">24 112 6 6</frame>
	</sprite>
	<sprite origin="3 3" looping="true" texture="./particles_snow.png" material="system/default.mats:default-noxray"
		num-sprites="2"

		pos-x="cos(rand(u+7*i)*2*pi) * radius * pow(rand(u+139*i),0.5) + sin(t*pi*2)*radius*rand(i)"
		pos-y="sin(rand(u+7*i)*2*pi) * radius * pow(rand(u+139*i),0.5) + cos(t*pi*2)*radius*rand(i)"
		color-a="saturate(sin(t*t*pi*2))*rand(i)*0.6+0.2"
		scale-x="0.9"
		scale-y="0.9"
		angle="rand(i+u)*t*pi*2"
	>
        
		<frame time="700">24 112 6 6</frame>
	</sprite>
	<sprite origin="3 3" looping="true" texture="./particles_snow.png" material="system/default.mats:default-noxray"
		num-sprites="6"

		pos-x="cos(i / (radius / 3) * pi*2) * lerp(rand(u+101*i), radius - 3, radius+2) + sin(t*pi*2)*radius*(rand(i)*-1)"
		pos-y="sin(i / (radius / 3) * pi*2) * lerp(rand(u+141*i), radius - 3, radius+2) + cos(t*pi*2)*radius*(rand(i)*-1)"
		scale-x="0.9"
		scale-y="0.9"
		color-a="saturate(sin(t*t*pi*2))*rand(i)*0.4+0.2"
		angle="rand(i+u)*t*pi*2"
	>
        
		<frame time="500">24 112 6 6</frame>
	</sprite>
	
	
